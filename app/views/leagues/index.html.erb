<h3><i class="fa fa-angle-right"></i> Leagues followed by <%= current_user.username %></h3>

<div class="row">
  <div class="col-md-12 mt">
    <%= render partial: "new_league_form" %>
    <div class="content-panel">
      <table class="table table-hover">
        <!-- <h4><i class="fa fa-angle-right"></i> All Leagues</h4>
        <hr> -->
        <thead>
          <tr>
            <th><i class="fa fa-bullhorn"></i> Category</th>
            <th><i class="fa fa-question-circle"></i> Data</th>
          </tr>
        </thead>
        <% @leagues.each do |league| %>
          <tbody>
            <tr>
              <td><%= link_to league.name, league %></td>
              <td>
                <%= link_to league, method: :delete, class: "btn btn-danger btn-xs" do %>
                  <i class="fa fa-trash-o "></i>
                <% end -%>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>

